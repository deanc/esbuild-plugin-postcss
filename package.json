{
  "name": "@deanc/esbuild-plugin-postcss",
  "version": "3.0.0",
  "description": "Plugin for esbuild to support postcss",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "packageManager": "pnpm@10.0.0",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm exec tsc -p tsconfig.json",
    "clean": "rimraf dist .output",
    "lint": "eslint .",
    "test": "pnpm build && node --test tests/*.js",
    "prepublishOnly": "pnpm build"
  },
  "author": {
    "name": "Dean Clatworthy",
    "url": "https://deanclatworthy.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/deanc/esbuild-plugin-postcss.git"
  },
  "keywords": [
    "esbuild",
    "plugin",
    "postcss"
  ],
  "dependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6"
  },
  "peerDependencies": {
    "esbuild": "^0.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.2.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.1",
    "typescript-eslint": "^8.20.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
}
